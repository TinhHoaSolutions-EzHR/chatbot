{
  "extends": "next/core-web-vitals",
  "rules": {
    "@next/next/no-img-element": "off",
    "prettier/prettier": [
      "error",
      {
        "semi": true,
        "trailingComma": "all",
        "singleQuote": true,
        "printWidth": 120,
        "tabWidth": 2,
        "arrowParens": "avoid",
        "bracketSameLine": false
      }
    ],
    "no-console": [
      "error",
      {
        "allow": ["debug", "error"]
      }
    ]
  }
}
